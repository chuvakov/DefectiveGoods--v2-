@model DefectiveGoods.Mvc.Models.Account.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Авторизация</title>
    <link rel="shortcut icon" href="~/img/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />

</head>

<body class="login-page hold-transition">

    <div>
        <div class="login-box card card--dark animate__animated animate__fadeInDown">
            <div class="card-header text-center">
                <div class="login-logo">
                    <i class="fas fa-box-open animate__animated animate__pulse animate__infinite"></i>
                    <span class="brand-text font-weight-light">Учёт товаров</span>
                </div>                
                <h5 class="login-title">Форма входа</h5>
            </div>

            <div class="card-body login-card-body">
                <form asp-action="Login" asp-controller="Account">
                    <div class="mb-3 row">
                        <label asp-for="Login" class="col-sm-3 col-form-label">Логин</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group--left-btn">
                                <button type="button" class="btn btn--transparent-green">
                                    <i class="fas fa-user"></i>
                                </button>
                                <input asp-for="Login" type="text" class="form-control datepicker-here" data-position="right top" aria-label="Дата поступления" aria-describedby="button-addon2">
                                <span asp-validation-for="Login"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-5 row">
                        <label asp-for="Password" class="col-sm-3 col-form-label">Пароль</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group--left-btn">
                                <button type="button" class="btn btn--transparent-green">
                                    <i class="fas fa-lock"></i>
                                </button>
                                <input asp-for="Password" type="text" class="form-control datepicker-here" data-position="right top" aria-label="Дата поступления" aria-describedby="button-addon2">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn--transparent-green mb-3">Регистрация</a>
                        <button type="submit" class="btn btn--green">Войти</button>
                    </div>
                </form>
            </div>

        </div>

        <footer class="main-footer main-footer--dark" style="margin: 0">            
            &copy; 2021 DefectiveGoods 
            <br />
            v0.0.1.@DateTime.Now.ToString("yyyyMMdd")            
        </footer>
    </div>    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/admin-lte/js/adminlte.js"></script>

</body>
</html>

