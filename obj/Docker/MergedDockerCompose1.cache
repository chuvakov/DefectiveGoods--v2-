services:
  defectivegoods.mvc:
    build:
      context: C:\Users\a.chuvakov\Desktop\C# and etc\DG
      dockerfile: DefectiveGoods.Mvc/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: DefectiveGoods.Mvc
      target: base
    container_name: DefectiveGoods.Mvc
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: defectivegoodsmvc:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/DefectiveGoods.Mvc.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\Users\a.chuvakov\Desktop\C and etc\DG\DefectiveGoods.Mvc:/app:rw
    - C:\Users\a.chuvakov\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\a.chuvakov\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\a.chuvakov\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\a.chuvakov\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\a.chuvakov\Desktop\C and etc\DG:/src:rw
  dg.pgsql:
    container_name: dg.pgsql
    environment:
      PGDATA: /var/lib/postgresql/data/pgdata
      POSTGRES_DB: dg
      POSTGRES_PASSWORD: '123'
    image: postgres:12.4-alpine
    ports:
    - published: 5432
      target: 5432
    restart: always
    volumes:
    - C:\Users\a.chuvakov\Desktop\C# and etc\DG\docker\temp\db:/var/lib/postgresql/data/pgdata:rw
version: '3.4'